<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miami.c11305010.timedtictactoe.PlayGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/player1_playicon"
                android:layout_width="@dimen/image_dimen"
                android:layout_height="@dimen/image_dimen" />
            <ImageView
                android:id="@+id/player2_playicon"
                android:layout_width="@dimen/image_dimen"
                android:layout_height="@dimen/image_dimen" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="@dimen/progress_height" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <GridLayout
                android:id="@+id/tictactoe"
                android:layout_width="@dimen/grid_dimen"
                android:layout_height="@dimen/grid_dimen"
                android:columnCount="3"
                android:rowCount="3">
                <Button />
                <Button />
                <Button />
                <Button />
                <Button />
                <Button />
                <Button />
                <Button />
                <Button />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
    
</RelativeLayout>
